<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/customborder0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/taobao_bt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/taobao_home" />

        <ImageButton
            android:id="@+id/taobao_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/taobao_back" />

        <ImageButton
            android:id="@+id/taobao_bt_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/taobao_forward" />

        <ImageButton
            android:id="@+id/taobao_bt_kuaitao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/taobao_search" />

    </LinearLayout>

    <WebView
        android:id="@+id/webview_taobao"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>